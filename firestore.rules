rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role
    function isAdmin() {
      return request.auth.token.email == "moneynivesh@gmail.com" || request.auth.token.email == "moneynivesh360@gmail.com";
    }

    // By default, deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow admins to do anything
    match /{document=**} {
        allow read, write: if isAdmin();
    }
    
    // Users collection: Allow users to create their own user doc, and read/update it.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // UserDetails collection: users can manage their own details.
    match /userDetails/{userId} {
        allow read, write, delete: if request.auth.uid == userId;
    }
    
    // userBalances collection: User can read their own balance.
    // Create is handled server-side on first login.
    // Updates are locked down to prevent client-side tampering; only server transactions can modify the balance.
    match /userBalances/{userId} {
        allow read: if request.auth.uid == userId;
        allow create, update, delete: if request.auth.uid == userId;
    }
    
    // Balance history: Users can read their own history. History is created by server logic only.
    match /balanceHistory/{historyId} {
        allow read, write, delete: if request.auth.uid == resource.data.userId;
    }

    // Investments: Users can read their own investments. Investments are created by admins.
    match /investments/{investmentId} {
        allow read, write, delete: if request.auth.uid == resource.data.userId;
    }

    // All types of requests: Users can create and read their own requests.
    match /investmentRequests/{requestId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    
    match /fdWithdrawalRequests/{requestId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    match /maturedFdRequests/{requestId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    
    match /topupRequests/{requestId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    
    match /balanceWithdrawalRequests/{requestId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Templates and Settings can be read by any authenticated user, but only written by admins.
    match /templates/{templateId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}